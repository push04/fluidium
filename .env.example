# Fluidium Environment Configuration

# Application
VITE_APP_NAME=Fluidium
VITE_APP_VERSION=1.0.0
VITE_APP_ENV=development

# API Configuration (for future backend integration)
VITE_API_BASE_URL=http://localhost:3001/api
VITE_API_TIMEOUT=30000

# Feature Flags
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_DATA_EXPORT=true
VITE_ENABLE_QUIZ=true
VITE_ENABLE_COLLABORATION=false

# Theme
VITE_DEFAULT_THEME=light
VITE_ENABLE_DARK_MODE=true

# Performance
VITE_SIMULATION_FPS=60
VITE_CANVAS_QUALITY=high
VITE_PARTICLE_COUNT=50

# Security
VITE_ENABLE_PWA=false
VITE_ENABLE_SERVICE_WORKER=false

# Database (if using Supabase/Firebase)
VITE_SUPABASE_URL=
VITE_SUPABASE_ANON_KEY=

# Analytics
VITE_GA_ID=
VITE_MIXPANEL_TOKEN=
